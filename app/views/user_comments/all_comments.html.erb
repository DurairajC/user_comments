<% #@all_comments = Comment.all.order("updated_at desc") 
@all_comments = show_comments
%>

<% if @all_comments != nil %>

	<% @all_comments.each do |comment| %>

	Comment from <%=comment.ip_address%> at <%=comment.updated_at.strftime("%FT %H:%M")%> <br/><br/>
	<%=comment.comments.to_s.html_safe%>
	<hr>
	<%end%>

<% else %>
	<h3>No comments to show</h3>
<% end %>